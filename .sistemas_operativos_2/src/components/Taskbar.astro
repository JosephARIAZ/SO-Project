---
// Componente para la barra de tareas
import StartButton from './StartButton.astro';
import DateTime from './DateTime.astro';
---
<div class="taskbar">
  <DateTime />
  <div class="taskbar-content">
    <StartButton />
  </div>
</div>

<style>
  .taskbar {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 60px;
    background-color: #333;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20px;
    color: white;
  }

  .taskbar-content {
    display: flex;
    align-items: center;
  }
</style>
